// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String
  password  String
  rents     Rent[]
}

//  Admin create one to many relationship with model rent

// status = {waiting, pickup, finished, expired}

model Rent {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  status       String   @default("waiting")
  admin        Admin    @relation(fields: [adminId], references: [id])
  adminId      String   @db.Uuid
  organisation String
  tools        Tool[]   @relation(references: [id])
}

//  Rent create many to many relationship with model tools

model Tool {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String
  desc       String
  image      String
  totalStock Int
  priceHour  Int
  priceDay   Int
  rents      Rent[]   @relation(references: [id])
}
