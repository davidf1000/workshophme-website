// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator nestgraphql {
  provider               = "node node_modules/prisma-nestjs-graphql"
  output                 = "../src/@generated/prisma-nestjs-graphql"
  fields_Validator_from  = "class-validator"
  fields_Validator_input = true

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String
  password  String
}

// Admin create one to many relationship with model rent
// status = {waiting_pickup, waiting_return, finished, dropped}
model Rent {
  id                 Int       @id @default(autoincrement())
  createdAt          DateTime  @default(now())
  tools              String // Containing Tools id used and quantity
  rentName           String
  rentNim            String
  rentPhone          String
  rentLineId         String
  organisation       String
  fromDate           DateTime
  expectedReturnDate DateTime
  status             String    @default("waiting_pickup")
  totalPrice         Int       @default(0)
  fine               Int?
  pickupName         String?
  pickupNim          String?
  returnName         String?
  returnNim          String?
  returnDate         DateTime?
}

model Tool {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  /// @Validator.MinLength(3)
  name       String
  image      String
  activated  Boolean  @default(true) // True if active(used), False if deleted by used 
  totalStock Int
  priceHour  Int
  priceDay   Int
}
