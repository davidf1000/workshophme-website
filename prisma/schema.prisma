// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator nestgraphql {
  provider               = "node node_modules/prisma-nestjs-graphql"
  output                 = "../src/@generated/prisma-nestjs-graphql"
  fields_Validator_from  = "class-validator"
  fields_Validator_input = true

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int   @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String
  password  String
  rents     Rent[]
}

//  Admin create one to many relationship with model rent

// status = {waiting, pickup, finished, expired}

model Rent {
  id           Int   @id @default(autoincrement())
  createdAt    DateTime @default(now())
  status       String   @default("waiting")
  admin        Admin    @relation(fields: [adminId], references: [id])
  adminId      Int   
  organisation String
  tools        Tool[]   @relation(references: [id])
}

//  Rent create many to many relationship with model tools

model Tool {
  id         Int   @id @default(autoincrement())
  createdAt  DateTime @default(now())
  /// @Validator.MinLength(3)
  name       String
  desc       String
  image      String
  totalStock Int
  priceHour  Int
  priceDay   Int
  rents      Rent[]   @relation(references: [id])
}
